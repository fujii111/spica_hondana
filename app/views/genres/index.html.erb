<h1>ジャンル一覧</h1><% @title = "ジャンル一覧" %>

<table class="list">
  <thead>
    <tr>
      <th>名前</th>
      <th>内容</th>
      <th>表示順</th>
      <th>表示</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.description %></td>
        <td><%= genre.sort %></td>
        <td class="center"><%= link_to '表示', genre %></td>
        <td class="center"><%= link_to '編集', edit_genre_path(genre) %></td>
        <td class="center"><%= link_to '削除', genre, method: :delete, data: { confirm: '削除してよろしいですか?(書籍のジャンル情報、会員お気に入りのジャンル情報も失われます)' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
<%= link_to '新規登録', new_genre_path %> | <%= link_to "戻る", "/information/admin" %>
</p>
