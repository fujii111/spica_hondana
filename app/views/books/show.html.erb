<h1>本の情報</h1><% @title = "本の情報" %>
<p id="notice"><%= notice %></p>

<div class="book_img">
	<p class="center">
		<%= image_tag "/books/show_image/" + @book.isbn, alt: @book.title %>
		<br>
		<input type="button" value="お気に入りに追加">
	</p>
</div>
<div class="book">
  <div class="field">
    <label>書名</label>
    <p>
    	<%= @book.title %>
    </p>
  </div>
  <div class="field">
    <label>出版社</label>
    <p>
    	<%= @book.publisher %>
    </p>
  </div>
  <div class="field">
    <label>著者名</label>
    <p>
    	<%= @book.author %>
    </p>
  </div>
  <div class="field">
    <label>言語</label>
    <p>
    	<%= @book.language %>
    </p>
  </div>
  <div class="field">
    <label>発売日</label>
    <p>
    	<%= @book.sale_date %>
    </p>
  </div>
  <div class="field">
    <label>ISBN</label>
    <p>
    	<%= @book.isbn %>
    </p>
  </div>
  <div class="field">
    <label>内容</label>
    <p>
    	<%= @book.description %>
    </p>
  </div>
</div>

<p>
<%= link_to '交換申請する', "/collections/member_list" %> |
<%= link_to 'ホンダナに登録する', "/collections/new" %> |
<% if session[:login_id] == "spica" %>
	<%= link_to '編集', edit_book_path(@book) %> |
<% end %>
<%= link_to '戻る', session[:url].blank? ? "/books/list" : session[:url] %>
</p>
