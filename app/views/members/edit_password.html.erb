<h1>パスワード変更</h1><% @title = "パスワード変更" %>

<%= form_for(@member, url: {action: "update_password"} ) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <p>入力エラーです。以下を確認してください。</p>
      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li class="warn"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag :password, "新しいパスワード" %>
    <p>
    	<%= f.password_field :password, size: 15, maxlength: 20 %> アルファベット・数字 8～20字
    </p>
    <p>
    	<%= f.password_field :password_confirmation, size: 15, maxlength: 20 %> (確認入力)
    </p>
  </div>
  <div class="field">
    <%= f.submit value: "パスワード変更" %>
  </div>
<% end %>

<p><%= link_to "戻る", "/members/show"  %></p>
